<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReveloJExamen.Login">
    <ContentPage.Content>
        <Grid>
            <Image Source="Wallpaper.jpg" Aspect="AspectFill"/>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="app.png" WidthRequest="100" HeightRequest="100" Margin="0,50,0,30"/>

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry x:Name="txtUsuario"  Placeholder="Ingrese Usuario" TextColor="WhiteSmoke" PlaceholderColor="White" />
                    <Entry x:Name="txtClave" Placeholder="Ingrese Contraseña" TextColor="WhiteSmoke" PlaceholderColor="White" IsPassword="True"/>
                    <Button x:Name="btnRegistro" Text="Iniciar Registro" BackgroundColor="White" Clicked="btnRegistro_Clicked"/>
                    <Label x:Name="lblMensaje" Text="" TextColor="Red"/>
                </StackLayout>
            </Grid>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>